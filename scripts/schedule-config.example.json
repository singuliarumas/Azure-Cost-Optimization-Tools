# Example Schedule Configuration
# Copy this file to config.json and customize

{
  "schedules": [
    {
      "name": "Dev VMs - Weekday Hours",
      "type": "vm",
      "resourceGroup": "dev-rg",
      "tag": "Environment=Dev",
      "actions": [
        {
          "type": "start",
          "time": "08:00",
          "days": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"]
        },
        {
          "type": "stop",
          "time": "19:00",
          "days": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"]
        }
      ]
    },
    {
      "name": "Test App Service - Scale Down Nights",
      "type": "appservice",
      "planName": "test-app-plan",
      "resourceGroup": "test-rg",
      "actions": [
        {
          "type": "scale",
          "time": "19:00",
          "tier": "Basic",
          "size": "B1"
        },
        {
          "type": "scale",
          "time": "08:00",
          "tier": "Standard",
          "size": "S1"
        }
      ]
    }
  ],
  "notifications": {
    "email": "admin@example.com",
    "enabled": false
  },
  "timezone": "UTC"
}
